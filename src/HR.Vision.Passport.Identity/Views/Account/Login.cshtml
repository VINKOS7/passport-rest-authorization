@model LoginViewModel

<div class="login-page-container">
    <div class="login-page-content">
          <form asp-action="Login" class="login-form">
                <input type="hidden" asp-for="ReturnUrl"/>
                
                <fieldset>
                    <h2>E Shop</h2>

                    <div class="form-group">
                        <label asp-for="Username">Email</label>
                        <input class="form-control" asp-for="Username" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Пароль</label>
                        <input type="password" class="form-control" asp-for="Password" autocomplete="off">
                    </div>

                    <div class="form-group">
                        <button class="login-button" name="button" value="login">Войти</button>
                            
                        <button class="login-button" name="button" value="forgot_password">Забыли пароль?</button>
                    </div>
                </fieldset>
            </form>
    </div>
</div>